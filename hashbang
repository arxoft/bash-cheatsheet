#!/bin/bash

### --------------
### Regex Patters
### --------------

RENUMERIC='^[0-9]+$'

# If a pattern matches
if [[ $N =~ $RENUMERIC ]] ; then
  echo "Matches"
fi

### --------------
### Text Formating
### --------------

TXTBOLD=$(tput bold)
TXTNORMAL=$(tput sgr0)

### --------------
### Files and Directories
### --------------

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

# If a file exists
if [ -f /path/to/file ]; then
  echo "Exits"
fi


### ----------------------------
### Windows, Desktop, Workspaces
### ----------------------------

CURRENT_WORKSPACE=$(wmctrl -d | grep \* | cut -d' ' -f1)+1
